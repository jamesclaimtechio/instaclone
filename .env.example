# Database (Neon PostgreSQL)
# Get from: https://console.neon.tech/
DATABASE_URL="postgresql://username:password@host.neon.tech/database?sslmode=require"

# Authentication
# Generate with: openssl rand -base64 64
JWT_SECRET="your-secret-key-min-32-characters-replace-with-random-string"

# Cloudflare R2 Storage (Module 5)
# Get from: https://dash.cloudflare.com/
R2_ACCOUNT_ID="your-cloudflare-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="instagram-clone-images"
R2_PUBLIC_URL="https://your-bucket-url.r2.cloudflarestorage.com"

# Email Service (Resend - Module 3)
# Get from: https://resend.com/api-keys
RESEND_API_KEY="re_your_resend_api_key"
RESEND_FROM_EMAIL="noreply@yourdomain.com"

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
